<!DOCTYPE html>
<meta charset="utf-8">
<style>
  html,body{
    height : 100%;
    min-height : 100%;
    width : 100%;
    min-width : 100%;
  }
.chart {
  float:left;
}

body {
  font: 10px sans-serif;
}

.arc path {
  stroke: #fff;
}

.node circle {
  cursor: pointer;
  fill: #fff;
  stroke: black;
  stroke-width: 1px;
}

.node text {
  font-size: 11px;
}

path.link {
  fill: none;
  stroke: #ccc;
  stroke-width: 1px;
}

.par-chart {
    float: left;
    width: 70%;
    overflow:hidden;
}
.data-table {
  float: left;
  width: 30%;
  overflow:hidden;
}

<%
  println new File("javascript/jqueryui/latest/jquery-ui.min.css").text
  println new File("javascript/jqueryui/latest/jquery-ui.theme.min.css").text
%>
</style>
<html>
  <head>
    <title>DexCharts : Parallel Coordinates To Table</title>
  </head>
  <body>
<script>
<%
  println new File("javascript/jquery/latest/jquery-2.1.3.min.js").text
  println new File("javascript/jqueryui/latest/jquery-ui.min.js").text
  println new File("javascript/underscore/latest/underscore-min.js").text
  println new File("javascript/d3/latest/d3.min.js").text
  println new File("javascript/dexjs/latest/dex.js").text
%>
</script>

<div>
  <div class="par-chart"><svg id="ChartArea1" width="100%" height="100%"></svg></div>
  <div class="data-table" id="data-table"></div>
</div>
<script>

<%
  def headerStr = "[" + header.collect { return "\"$it\"" }.join(',') + "]"
  def dataRows = []
  data.eachWithIndex
  {
    row, ri ->
    dataRows << "[" + row.collect { return "\"$it\"" }.join(',') + "]"
  }
  println "var csv = { 'header' : $headerStr,\n 'data' : [" + dataRows.join(',\n') + "] };";
%>

var pcChart = new dex.charts.d3.ParallelCoordinates({
  'parent'  : "#ChartArea1",
  'id'      : "ParChart",
  'csv'     : csv,
  'selected.link.stroke.width' : 2,
  'unselected.link.stroke.color' : "grey",
  'unselected.link.stroke.opacity': 0.05,
  'unselected.link.stroke.dasharray' : '',
  'verticalLabel.font.size' : 32
});

var table = new dex.ui.Table({
  'parent' : "#data-table",
  'id'     : "Table",
  'csv'    : csv
});

table.subscribe(pcChart, "select", function(chartEvent) {
  table.attr('csv', chartEvent.selected).update();
});

pcChart.render();
table.render();

</script>
</body>
</html>